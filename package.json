{
  "name": "a-remarkable-browser-extension",
  "displayName": "A remarkable browser extension",
  "version": "0.0.1",
  "description": "A remarkable browser extension to upload your web documents to reMarkable Cloud in one click",
  "author": "Alberto Hern√°ndez Cerezo <pascu216@gmail.com>",
  "scripts": {
    "build:plasmo": "plasmo build",
    "build:tailwind": "npx tailwindcss --postcss ./config/postcss.config.cjs -i ./src/tailwind.css -o src/style.css -c ./config/tailwindcss.config.mjs --minify",
    "start:plasmo": "plasmo dev",
    "start:tailwind": "npx tailwindcss --postcss ./config/postcss.config.cjs -i ./src/tailwind.css -o src/style.css -c ./config/tailwindcss.config.mjs --watch",
    "start": "npx concurrently --kill-others \"yarn run start:tailwind\" \"yarn run start:plasmo\"",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^16.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.4.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
